%article.news_item
  %h1
    = news.title
    %small
      = news.display_date
    %small
      %span.pull-right
        = link_to(t('edit'), edit_admin_news_path(news))
        |
        = link_to(t('destroy'), admin_news_path(news), :method => :delete)

  %p= news.content.html_safe
  %ul.thumbnails
    - news.pictures.each do |picture|
      %li.span1
        = image_tag(picture.image(:thumb))
