- title t('devise.passwords.forgot')

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' } ) do |f|
  = f.error_notification
  = f.input :email, :required => true
  .form-actions
    = f.button :submit, t('devise.passwords.send_reset_instructions'), :class => 'btn-primary'

= render "links"